<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:useDefaultMargins="true"
        app:columnCount="7"
        app:rowCount="3">

        <ImageView
            android:id="@+id/menu_saveBookmark"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_bookmark" />

        <ImageView
            android:id="@+id/menu_shareLink"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_menu_share" />

        <ImageView
            android:id="@+id/button_openFav"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/star_grey" />

        <ImageView
            android:id="@+id/button_closeTab"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_close" />

        <ImageView
            android:id="@+id/menu_shareScreenshot"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_fullscreen" />

        <ImageView
            android:id="@+id/menu_sharePDF"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_document" />

        <ImageView
            android:id="@+id/menu_shareClipboard"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/clipboard_outline" />

        <ImageView
            android:id="@+id/menu_openWith"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_exit" />

        <ImageView
            android:id="@+id/menu_saveScreenshot"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_fullscreen" />

        <ImageView
            android:id="@+id/menu_sc"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/link_plus" />

        <ImageView
            android:id="@+id/menu_fileManager"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_file" />

        <ImageView
            android:id="@+id/menu_searchSite"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_search" />

        <ImageView
            android:id="@+id/contextLink_saveAs"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_document" />

        <ImageView
            android:id="@+id/menu_fav"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/star_grey" />

        <ImageView
            android:id="@+id/menu_download"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_download" />

        <ImageView
            android:id="@+id/button_quit"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_exit" />


        <ImageView
            android:id="@+id/menu_settings"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:gravity="center_vertical"
            android:src="@drawable/icon_settings" />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>

