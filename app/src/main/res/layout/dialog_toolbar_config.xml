<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_border_bg"
    android:gravity="center"
    tools:ignore="ContentDescription" >
    <de.baumann.browser.view.sortlistpreference.DragSortListView
        android:id="@+id/drag_sort_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="right"
        >
        <Button android:id="@+id/action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:includeFontPadding="false"
            android:background="?attr/selectableItemBackground"
            android:textColor="?android:attr/colorAccent"
            android:text="@android:string/cancel"/>
        <Button android:id="@+id/action_ok"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:includeFontPadding="false"
            android:background="?attr/selectableItemBackground"
            android:textColor="?android:attr/colorAccent"
            android:text="@android:string/ok"/>
    </LinearLayout>
</LinearLayout>


