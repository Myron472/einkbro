<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <FrameLayout android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/main_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:maxHeight="4dp"
        android:progressTint="?android:attr/colorAccent"
        android:layout_alignParentBottom="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/fab_imageButtonNav_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/main_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:borderWidth="1dp"
        android:background="@drawable/roundcorner"
        android:tint="@android:color/darker_gray"
        tools:visibility="visible"
        android:elevation="0dp"
        app:srcCompat="@drawable/icon_overflow_fab"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/fab_imageButtonNav_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/main_content"
        android:layout_alignParentStart="true"
        android:layout_margin="18dp"
        app:borderWidth="1dp"
        android:background="@drawable/roundcorner"
        android:tint="@android:color/darker_gray"
        android:elevation="0dp"
        android:visibility="gone"
        app:srcCompat="@drawable/icon_overflow_fab"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/fab_imageButtonNav_center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/main_content"
        android:layout_centerInParent="true"
        android:layout_margin="18dp"
        android:visibility="gone"
        app:borderWidth="1dp"
        android:background="@drawable/roundcorner"
        android:tint="@android:color/darker_gray"
        android:elevation="0dp"
        app:srcCompat="@drawable/icon_overflow_fab"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>