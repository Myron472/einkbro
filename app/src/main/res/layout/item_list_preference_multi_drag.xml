<?xml version="1.0" encoding="utf-8"?>
<de.baumann.browser.view.sortlistpreference.CheckableMultiSelectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/middle_drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/dragIcon"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="?attr/colorControlNormal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />

    <CheckedTextView
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_vertical"
        />

</de.baumann.browser.view.sortlistpreference.CheckableMultiSelectLayout>
