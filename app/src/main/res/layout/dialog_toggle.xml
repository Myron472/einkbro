<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_border_bg"
    android:gravity="center"
    tools:ignore="ContentDescription" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:includeFontPadding="false"
        android:padding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/colorButtonNormal" />

    <ScrollView android:layout_width="350dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:minHeight="46dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/abIcon"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_block" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:text="@string/setting_title_adblock"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:attr/textColorPrimary" />

                <ImageButton
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:id="@+id/imageButton_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="?attr/actionBarItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_action_close_red" />

                <CheckBox
                    android:id="@+id/switch_adBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:minHeight="46dp"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/cookieIcon"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_cookie"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/cookieIcon"
                    android:layout_toStartOf="@+id/imageButton_cookie"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:text="@string/setting_title_cookie"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:attr/textColorPrimary"/>

                <CheckBox
                    android:layout_centerVertical="true"
                    android:id="@+id/switch_cookie"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:checked="false"/>

                <ImageButton
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:id="@+id/imageButton_cookie"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_toStartOf="@+id/switch_cookie"
                    android:background="?attr/actionBarItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_action_close_red"/>

            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/toggle_historyView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                        <ImageButton
                            android:id="@+id/toggle_history"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_history" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/history" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/toggle_locationView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                        <ImageButton
                            android:id="@+id/toggle_location"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/location" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/toggle_imagesView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                        <ImageButton
                            android:id="@+id/toggle_images"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/image" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/toggle_media_continue_view"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                        <ImageButton
                            android:id="@+id/toggle_media_continue"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/ic_media_continue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/media_continue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/toggle_desktopView"
                            android:layout_width="42dp"
                            android:layout_height="2dp"
                            android:background="?android:attr/colorAccent" />

                        <ImageButton
                            android:id="@+id/toggle_desktop"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="?attr/actionBarItemBackground"
                            android:src="@drawable/icon_desktop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/desktop" />


                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="right"
                android:minHeight="46dp">

                <Button android:id="@+id/action_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="?android:attr/colorAccent"
                    android:text="@android:string/ok"/>

                <Button
                    android:id="@+id/action_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="?android:attr/colorAccent"
                    android:text="@string/dialog_toggle_reload"
                    android:layout_marginEnd="6dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>


